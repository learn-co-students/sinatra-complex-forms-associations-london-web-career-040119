<h1>Update a Pet</h1>
<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br>
  <input type="text" name="pet_name" value="<%= @pet.name %>">
  <br>
  <% @owners.each do |owner| %>
    <% checked = @pet.owner == owner ? 'checked="checked"' : "" %>
    <input type="radio" name="owner_id" value="<%= owner.id %>" id="<%= owner.id %>" <%= checked  %>>
    <%=owner.name%>
  <% end %>
  <br>
  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
  <input  type="text" name="owner[name]" />
  <br>
  <input type="submit" value="Update Pet">
</form>

